<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <property name="LOGS" value="./logs" />

    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>
                %black(%d{ISO8N01}) %highlight(%-5level) [%blue(%t)] %yellow(%C{1}): %msg%n%throwable
            </Pattern>
        </encoder>
    </appender>

    <appender name="RollingFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOGS}/pki-backend.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>%d %p %C{1} [%t] %m%n</Pattern>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOGS}/archived/pki-backend-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!--
    Podešavamo specifične nivoe za različite pakete.
    Ovo nam omogućava da smanjimo "šum" od frejmvorka.
    -->

    <!-- Za našu aplikaciju, želimo da vidimo sve INFO logove i iznad toga. -->
    <logger name="com.pki.pki_backend" level="INFO" />

    <!-- Za Spring, želimo da vidimo samo upozorenja i greške. -->
    <logger name="org.springframework" level="WARN" />

    <!-- Za Hibernate, takođe samo upozorenja i greške. -->
    <logger name="org.hibernate" level="WARN" />


    <!--
    Root logger je sada postavljen na WARN.
    Ovo će biti podrazumevani nivo za sve što nismo eksplicitno naveli iznad.
    -->
    <root level="WARN">
        <appender-ref ref="RollingFile" />
        <appender-ref ref="Console" />
    </root>

</configuration>

